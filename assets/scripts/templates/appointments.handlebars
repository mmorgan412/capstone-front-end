<table class="table table-hover">
  <thead>
    <tr>
      <th></th>
      <th>Date</th>
      <th>Time</th>
      <th>Description</th>
    </tr>
  </thead>
  <tbody>

    {{#each appointments as |appointment|}}

    <tr>
      <th scope="row"></th>
      <td>{{appointment.date}}</td>
      <td>{{appointment.time}}</td>
      <td>{appointment.description}}</td>
    </tr>

    {{/each}}
  </tbody>
</table>
